<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.MyCarActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/my_car_back_img"
        android:layout_alignBottom="@id/my_car_back_img"
        android:text="@string/my_cars"
        android:gravity="center"
        android:textSize="18sp"
        android:fontFamily="@font/raleway_black"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/my_car_back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:src="@drawable/ic_back" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_car_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_car_back_img"/>

    <Button
        android:id="@+id/my_car_add"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/bg_floating_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="12dp"/>

</RelativeLayout>