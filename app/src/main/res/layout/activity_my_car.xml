<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.MyCarActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/my_car_back_img"
        android:layout_alignBottom="@id/my_car_back_img"
        android:text="@string/my_cars"
        android:gravity="center"
        android:textSize="18sp"
        android:fontFamily="@font/raleway_black"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/my_car_back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:src="@drawable/ic_back" />
    <TextView
        android:id="@+id/my_car_mark_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_car_back_img"
        android:text="@string/mark_"
        android:textSize="18sp"
        android:fontFamily="@font/raleway_black"
        android:layout_margin="12dp"/>
    <TextView
        android:id="@+id/my_car_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/my_car_mark_text"
        android:layout_below="@id/my_car_back_img"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:textColor="@color/blue"
        android:fontFamily="@font/raleway_black"/>
    <TextView
        android:id="@+id/my_car_model_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_car_mark"
        android:text="@string/model_"
        android:textSize="18sp"
        android:fontFamily="@font/raleway_black"
        android:layout_margin="12dp"/>
    <TextView
        android:id="@+id/my_car_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/my_car_model_text"
        android:layout_below="@id/my_car_mark"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/raleway_semibold"/>
    <TextView
        android:id="@+id/my_car_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_car_model"
        android:text="@string/type_"
        android:textSize="18sp"
        android:fontFamily="@font/raleway_black"
        android:layout_margin="12dp"/>
    <TextView
        android:id="@+id/my_car_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/my_car_type_text"
        android:layout_below="@id/my_car_model"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/raleway_semibold"/>

</RelativeLayout>