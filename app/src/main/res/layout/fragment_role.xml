<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/role_fragment_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="120dp" />

    <ProgressBar
        android:id="@+id/role_fragment_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp" />

    <RelativeLayout
        android:id="@+id/role_search_layout_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/bg_gradient_blue" />

        <ImageView
            android:layout_width="160dp"
            android:layout_height="32dp"
            android:layout_margin="12dp"
            android:src="@mipmap/logo_label" />
        <EditText
            android:id="@+id/role_fragment_edit_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="74dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_edit_fields"
            android:hint="@string/search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:padding="12dp" />
    </RelativeLayout>
</RelativeLayout>
