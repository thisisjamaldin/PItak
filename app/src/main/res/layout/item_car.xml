<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="20dp">

    <ImageView
        android:id="@+id/item_car_image"
        android:layout_width="126dp"
        android:src="@drawable/bg_upload_image"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_car_layout"
        android:layout_alignTop="@id/item_car_layout"/>

    <RelativeLayout
        android:id="@+id/item_car_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="126dp"
        android:background="@drawable/bg_main_item"
        android:elevation="2dp">

        <TextView
            android:id="@+id/item_car_mark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_car_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_car_mark"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_edit_fields"
            android:padding="4dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_car_model_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_car_number"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="@string/model_"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_car_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_car_number"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/item_car_model_text"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_car_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_car_model_text"
            android:layout_marginStart="12dp"
            android:text="@string/type_"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_car_model_text"
            android:layout_toEndOf="@id/item_car_type_text"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp"/>

    </RelativeLayout>
</RelativeLayout>