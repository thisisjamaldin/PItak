<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="20dp">

    <ImageView
        android:id="@+id/item_main_image"
        android:layout_width="138dp"
        android:layout_height="138dp"
        android:elevation="2dp"
        android:src="@color/gray" />

    <ImageView
        android:id="@+id/item_main_save"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@id/item_main_image"
        android:layout_alignBottom="@id/item_main_image"
        android:elevation="2dp"
        android:padding="8dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_save" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="138dp"
        android:layout_marginStart="126dp"
        android:background="@drawable/bg_main_item"
        android:elevation="2dp">

        <TextView
            android:id="@+id/item_main_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_main_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_main_name"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_edit_fields"
            android:padding="4dp"
            android:text="@string/from"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_main_to_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_main_from"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="@string/to_"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_main_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_main_from"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/item_main_to_text"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_main_mark_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_main_to_text"
            android:layout_marginStart="12dp"
            android:text="@string/mark_"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_main_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_main_to_text"
            android:layout_toRightOf="@id/item_main_mark_text"
            android:text="KIA Sorento"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_main_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_main_mark_text"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="600 сом"
            android:textColor="@color/bluish_black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_main_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_main_from"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_round_yellow"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="@string/driver"
            android:textColor="@color/bluish_black"
            android:textStyle="bold" />

    </RelativeLayout>

    <Button
        android:id="@+id/item_main_whatsapp"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_toStartOf="@id/item_main_call"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_whatsapp" />

    <Button
        android:id="@+id/item_main_call"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_round_call" />
</RelativeLayout>