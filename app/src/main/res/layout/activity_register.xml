<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.RegisterActivity">

    <ImageView
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_above="@id/register_sign_in"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/register_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:textAllCaps="false"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_round_light_blue_button"
        android:textColor="@color/white"
        android:layout_centerVertical="true"/>
    <Button
        android:id="@+id/register_register"
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:layout_below="@id/register_sign_in"
        android:textAllCaps="false"
        android:background="@drawable/bg_round_blue_button"
        android:textColor="@color/white"
        android:layout_centerVertical="true"/>
</RelativeLayout>