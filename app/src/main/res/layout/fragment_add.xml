<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_fragment_main_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/add_fragment_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:padding="34dp"
            android:src="@drawable/ic_camera"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_edit_fields" />

        <TextView
            android:id="@+id/add_fragment_image_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_a_photo_of_your_car_with_the_state_number"
            android:layout_marginTop="-58dp"
            android:textAlignment="center"
            android:layout_marginBottom="32dp"/>

        <EditText
            android:id="@+id/add_fragment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_edit_fields"
            android:hint="@string/headline"
            android:inputType="text"
            android:padding="12dp" />

        <EditText
            android:id="@+id/add_fragment_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_edit_fields"
            android:gravity="top"
            android:hint="@string/description"
            android:minHeight="120dp"
            android:padding="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_semibold"
            android:padding="4dp"
            android:text="@string/from"
            android:textColor="@color/bluish_black" />

        <EditText
            android:id="@+id/add_fragment_from_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_edit_fields"
            android:gravity="top"
            android:hint="@string/from"
            android:inputType="text"
            android:padding="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="2"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/date"
                android:textColor="@color/bluish_black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/time"
                android:textColor="@color/bluish_black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="4dp">

            <Button
                android:id="@+id/add_fragment_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="2"
                android:background="@drawable/bg_edit_fields"
                android:drawableStart="@drawable/ic_date"
                android:paddingStart="12dp" />

            <Button
                android:id="@+id/add_fragment_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_edit_fields" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_semibold"
            android:padding="4dp"
            android:text="@string/to"
            android:textColor="@color/bluish_black" />

        <EditText
            android:id="@+id/add_fragment_to_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_edit_fields"
            android:gravity="top"
            android:hint="@string/to"
            android:inputType="text"
            android:padding="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="2"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/date"
                android:textColor="@color/bluish_black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/time"
                android:textColor="@color/bluish_black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="4dp">

            <Button
                android:id="@+id/add_fragment_date_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="2"
                android:background="@drawable/bg_edit_fields"
                android:drawableStart="@drawable/ic_date"
                android:paddingStart="12dp" />

            <Button
                android:id="@+id/add_fragment_time_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_edit_fields" />
        </LinearLayout>

        <EditText
            android:id="@+id/add_fragment_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_edit_fields"
            android:hint="@string/price"
            android:inputType="number"
            android:padding="12dp" />

        <Spinner
            android:id="@+id/add_fragment_car_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_drop_down"
            android:layout_marginBottom="16dp"
            android:padding="14dp"/>
        <CheckBox
            android:id="@+id/add_fragment_agreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/agreement" />

        <Button
            android:id="@+id/add_fragment_post_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_round_blue_button"
            android:text="@string/post"
            android:textColor="@color/white" />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-64dp"/>
    </LinearLayout>
</ScrollView>